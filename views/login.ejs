<style>
    .container {
        margin-top: 250px;
    }
    #login-form {
        width: 20vw;
        margin-left: 40vw;
    }
    #login-form input {
        width: 100%;
        height: 30px;
        font-size: 15px;
        background: aliceblue;
        border: 2px solid lightgray;
        border-radius: 10px;
        outline: none;
        margin-bottom: 10px;
    }
    #login-form button {
        width: 10vw;
        float: right;
        padding: 10px 0;
        border: none;
        background: skyblue;
        border-radius: 10px;
        color: white;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
    }
    #register {
        display: block;
        float: right;
        margin-top: 20px;
    }
    .login-btn {
        display: flex;
        justify-content: center;
    }
    #errors {
        width: 40vw;
        margin-left: 30vw;
        padding: 15px 30px;
        background: rgb(227, 164, 164);
        color: rgb(165, 44, 44);
        list-style-type: disc;
        border-radius: 15px;
    }
    #errors li {
        margin-top: 5px;
        margin-left: 40px;
        margin-right: 40px;
        font-family: Arial, Helvetica, sans-serif;
    }
    @media (max-width: 768px) {
        #login-form {
            margin-left: 2vw;
            width: 90vw;
        }
        #register {
            margin-top: 20px;
        }
        #login-form button {
            width: 90vw;
            color: white;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
        }
    }
</style>
<div class="container">
    <% if(errorMessages) { %>
        <ul id="errors">
        <% errorMessages.forEach(error => { %>
            <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
    
    <div id="login-form">
        <form action="/login" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="text" name="login" placeholder="Login..."> <br>
            <input type="password" name="password" placeholder="Password..."> <br>
            <div class="login-btn">
                <button type="submit">Login</button>
            </div>
        </form>
    
        <div id="register">
            Still dont have an account?
            <a href="/register">Register</a>
        </div>
    </div>
</div>
